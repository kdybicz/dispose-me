<table class="table table-hover table-sm table-striped">
  <tbody>
    <tr>
      <th>Subject:</th>
      <td><%= email.subject %></td>
    </tr>
    <tr>
      <th>From:</th>
      <td>example@example.com</td>
    </tr>
    <% if (email.to.length > 0) { %>
    <tr>
      <th>To:</th>
      <td><%= email.to.map((to) => to.address.replace(/@.*/, '@example.com')).join(', ') %></td>
    </tr>
    <% } %>
    <% if (email.cc.length > 0) { %>
    <tr>
      <th>Cc:</th>
      <td><%= email.cc.map((cc) => cc.address).join(', ') %></td>
    </tr>
    <% } %>
    <% if (email.bcc.length > 0) { %>
    <tr>
      <th>Bcc:</th>
      <td><%= email.bcc.map((bcc) => bcc.address).join(', ') %></td>
    </tr>
    <% } %>
    <tr>
      <th>Received:</th>
      <td><%= email.received.toGMTString() %></td>
    </tr>
    <% if (email.attachments.length > 0) { %>
    <tr>
      <th>Attachments:</th>
      <td>
        <% for(var i = 0; i < email.attachments.length; i++) { %>
          <a class="badge badge-info" href="/inbox/<%= req.params.username %>/<%= email.id %>/attachment?filename=<%= email.attachments[i].filename %>&x-api-key=<%= token %>" title="Download the attachment">
            <%= email.attachments[i].filename %> <i class="bi bi-download ml-1"></i>
          </a>
        <% } %>
      </td>
    </tr>
    <% } %>
</tbody>
</table>

<div class="well">
  <iframe id="msg_body" style="border: 1pem; overflow: hidden; background-color: white;" title="Email Message Body" width="100%" height="550" name="msg_body" marginheight="0" srcdoc="<%= email.body %>">
  </iframe>
</div>
