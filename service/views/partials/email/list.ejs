<table class="table table-hover table-sm table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th>From</th>
      <th>Subject</th>
      <th>Received</th>
    </tr>
  </thead>
  <tbody>
    <% for(var i = 0; i < emails.length; i++) { %>
      <tr data-id="<%= emails[i].id %>" onclick="location.href = '/inbox/<%= req.params.username %>/<%= emails[i].id %>?<%= new URLSearchParams(query) %>'" style="cursor: pointer">
        <th scope="row"><%= i + 1 %></th>
        <td><%= emails[i].from[0].address %></td>
        <td><%= emails[i].subject %></td>
        <td><%= emails[i].received.toGMTString() %></td>
      </tr>
    <% } %>
  </tbody>
</table>
