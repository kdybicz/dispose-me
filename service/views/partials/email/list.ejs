<table class="table table-hover table-sm table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th>From</th>
      <th>Subject</th>
      <th>Received</th>
      <th><i class="bi bi-paperclip"></i></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% for(var i = 0; i < emails.length; i++) { %>
      <tr data-id="<%= emails[i].id %>" class="position-relative">
        <th scope="row"><%= i + 1 %></th>
        <td>example@example.com</td>
        <td>
          <span class="text-truncate" style="display: inline-block; max-width: 35rem;">
            <%= emails[i].subject %>
          </span>
        </td>
        <td><%= emails[i].received.toGMTString() %></td>
        <td>
          <% if (emails[i].hasAttachments) { %>
            <i class="bi bi-paperclip"></i>
          <% } %>
        </td>
        <td><a href="/inbox/<%= req.params.username %>/<%= emails[i].id %>?<%= new URLSearchParams(query) %>" class="stretched-link"></a></td>
      </tr>
    <% } %>
  </tbody>
</table>
