<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="bg-light">

<header>
  <%- include('../partials/header'); %>
</header>

<main role="main" class="container">
  <% if (query.query) { %>
    <div class="row">
      <div class="col-md">
        <h5><b>public inbox:</b> <%= query.query %></h5>
      </div>
      <div class="col-md text-right">
          <a href="<%= url %>&x-api-key=<%= token %>&type=json">[JSON]</a>
      </div>
    </div>
    <%- include('../partials/email/list', { emails }); %>
  <% } else{ %>
    <div class="jumbotron">
      <h1 class="display-4">ðŸ“¨ Dispose Me</h1>
      <p class="lead">I'm a simple, disposable email service with an easy API access.</p>
      <hr class="my-4">
  
      <form method="GET" action="/inbox">
        <div class="input-group mb-3">
          <label for="query" class="col-sm-2 col-form-label">Your new inbox:</label>
            <div class="col-sm-4 p-0">
              <input class="form-control" type="text" id="query" name="query"  value="<%= query.query %>" placeholder="Inbox name" aria-label="Inbox name" required pattern="[a-zA-Z0-9.+]{2,}">
            </div>
            <div class="input-group-append">
              <span class="input-group-text">@<%= process.env.DOMAIN_NAME %></span>
              <button class="btn btn-outline-primary" type="submit">Open</button>
            </div>
          </div>
      </form>
    </div>
  <% } %>
</main>

<footer class="footer">
  <%- include('../partials/footer'); %>
</footer>

