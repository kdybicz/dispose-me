<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <script type="text/javascript">
    function initClipboard() {
      var clipboard = new ClipboardJS('.btn-clipboard');
      clipboard.on('success', function(e) {
        var icon = e.trigger.querySelector(".bi");
        var originalTitle = e.trigger.title;

        e.clearSelection();

        icon.classList.replace("bi-clipboard", "bi-check2")
        e.trigger.title = "Copied!"

        setTimeout(function() {
          icon.classList.replace("bi-check2", "bi-clipboard");
          e.trigger.title = originalTitle;
        }, 2e3);
      });
    };

    function generateUsername() {
      var my_chance = new Chance();
      var username = my_chance.name().replace(' ', '') + my_chance.integer({ min: 1, max: 99 });

      $('#query').val(username.toLowerCase());
    };
  </script>
</head>
<body class="bg-light" onload="initClipboard();">

<header>
  <%- include('../partials/header'); %>
</header>

<main role="main" class="container">
  <% if (query.query) { %>
    <div class="row">
      <div class="col-md">
        <h5>
          <b>public inbox: </b>
          <span id="email"><%= query.query %>@<%= process.env.DOMAIN_NAME %></span>
          <button class="btn btn-default btn-clipboard p-0" aria-label="Copy to clipboard" title="Copy to clipboard" data-clipboard-target="#email">
            <i class="bi bi-clipboard" aria-hidden="true"></i>
          </button>
        </h5>
      </div>
      <div class="col-md text-right">
          <a href="<%= url %>&x-api-key=<%= token %>&type=json">[JSON]</a>
      </div>
    </div>
    <%- include('../partials/email/list', { emails }); %>
  <% } else { %>
    <div class="jumbotron">
      <h1 class="display-4">ðŸ“¨ Dispose Me</h1>
      <p class="lead">I'm a simple, disposable email service with an easy API access.</p>
      <hr class="my-4">
  
      <form method="GET" action="/inbox">
        <div class="input-group mb-3">
          <label for="query" class="col-sm-2 col-form-label">Your new inbox:</label>
          <!-- <div class="input-group-prepend">
          </div> -->
          <div class="col-sm-4 p-0">
            <input class="form-control" type="text" id="query" name="query" placeholder="Inbox name" aria-label="Inbox name" required pattern="[a-zA-Z0-9.+]{2,}">
          </div>
          <div class="input-group-append">
            <span class="input-group-text">@<%= process.env.DOMAIN_NAME %></span>
            <button type="button" class="btn btn-outline-secondary" aria-label="Generate new username" onclick="generateUsername();">
              <i class="bi bi-repeat"></i>
            </button>
            <button type="submit" class="btn btn-primary" aria-label="Go to inbox">
              <i class="bi bi-box-arrow-in-right"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  <% } %>
</main>

<footer class="footer">
  <%- include('../partials/footer'); %>
</footer>

