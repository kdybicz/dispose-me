<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <script type="text/javascript">
    function initClipboard() {
      var clipboard = new ClipboardJS('.btn-clipboard');
      clipboard.on('success', function(e) {
        var btn = e.trigger;
        var svg = btn.querySelector('svg');
        var originalSvg = svg.outerHTML;
        var originalTitle = btn.title;

        e.clearSelection();

        svg.outerHTML = "<svg class=\"size-4 text-emerald-500\" fill=\"none\" viewBox=\"0 0 24 24\" stroke-width=\"2.5\" stroke=\"currentColor\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" d=\"m4.5 12.75 6 6 9-13.5\"/></svg>";
        btn.title = "Copied!";

        setTimeout(function() {
          btn.querySelector('svg').outerHTML = originalSvg;
          btn.title = originalTitle;
        }, 2e3);
      });
    };
  </script>
</head>
<body onload="initClipboard();">

<header>
  <%- include('../partials/header'); %>
</header>

<main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
    <div class="flex items-center gap-2 text-base font-semibold text-slate-800">
      <span id="email"><%= req.params.username %>@<%= process.env.DOMAIN_NAME %></span>
      <button class="inline-flex items-center justify-center px-2.5 py-1.5 text-sm font-semibold rounded-lg text-slate-600 hover:bg-slate-100 hover:text-slate-800 transition-all btn-clipboard" aria-label="Copy to clipboard" title="Copy to clipboard" data-clipboard-target="#email">
        <svg class="size-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0 0 13.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 0 1-.75.75H9.75a.75.75 0 0 1-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 0 1-2.25 2.25H6.75A2.25 2.25 0 0 1 4.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 0 1 1.927-.184"/></svg>
      </button>
    </div>
    <div class="flex items-center gap-1">
      <a class="inline-flex items-center justify-center size-9 rounded-lg text-slate-500 hover:text-slate-800 hover:bg-slate-100 transition-colors" href="<%= req.path %>/feed/?x-api-key=<%= token %>" title="RSS feed of the inbox">
        <svg class="size-[18px]" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12.75 19.5v-.75a7.5 7.5 0 0 0-7.5-7.5H4.5m0-6h.008v.008H4.5V5.25zm.375 12.75a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.25c7.455 0 13.5 6.045 13.5 13.5"/></svg>
      </a>
      <a class="inline-flex items-center justify-center size-9 rounded-lg text-slate-500 hover:text-slate-800 hover:bg-slate-100 transition-colors" href="<%= req.path %>?x-api-key=<%= token %>&type=json" title="JSON output of the inbox">
        <svg class="size-[18px]" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5"/></svg>
      </a>
    </div>
  </div>
  <%- include('../partials/email/list', { emails }); %>
</main>

<footer class="fixed inset-x-0 bottom-0 h-14 bg-white border-t border-slate-200 flex items-center z-40">
  <%- include('../partials/footer'); %>
</footer>

<!-- clipboard.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.10/clipboard.min.js" integrity="sha512-PIisRT8mFfdxx99gMs7WAY5Gp+CtjYYxKvF93w8yWAvX548UBNADHu7Qkavgr6yRG+asocqfuk5crjNd5z9s6Q==" crossorigin="anonymous"></script>

<!-- Chance.js -->
<script src="https://chancejs.com/chance.min.js" integrity="sha512-oTAa0uPPR+/hLt+vfEjg/YzxHaY/rbc1OKDjbB0bAt1w+kP2yQvg/g+cu8/c0QaMbDpI8ECMCl4YXCxLJPIinQ==" crossorigin="anonymous"></script>

</body>
</html>
