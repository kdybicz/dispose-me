<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="bg-light">

<header>
  <%- include('../partials/header', { errorPage: true }); %>
</header>

<main role="main" class="container">
  <div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <span class="display-1 d-block">422</span>
        <div class="mb-4 lead">Some of the request data are invalid</div>

        <% if (locals.errors) { %>
          <ul class="list-group list-group-flush">
            <% for(var i = 0; i < locals.errors.length; i++) { %>
              <li class="list-group-item list-group-item-danger"><%= locals.errors[i].msg %></li>
            <% } %>
          </ul>
        <% } %>
    </div>
  </div>
</main>

<footer class="footer">
  <%- include('../partials/footer'); %>
</footer>

<%- include('../partials/bootstrap'); %>

</body>
</html>
