<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="bg-light">

<header>
  <%- include('../partials/header'); %>
</header>

<main role="main" class="container">
  <div class="jumbotron">
    <h1 class="display-4">ðŸ“¨ Dispose Me</h1>
    <p class="lead">I'm a simple, disposable email service with an easy API access.</p>
    <hr class="my-4">

    <form method="POST" action="/">
      <div class="form-group row">
        <label for="token" class="col-sm-2 col-form-label">Provide Your token:</label>
        <div class="col-sm-4">
          <% const tokenError = (locals.errors ?? []).find((error) => error.type === "field" && error.path === "token"); %>
          <input class="form-control <%= tokenError ? 'is-invalid' : '' %>" type="text" id="token" name="token" value="<%= tokenError?.value ?? query['x-api-key'] %>" placeholder="Token" aria-label="Token" required>
          <% if (tokenError) { %>
            <div class="invalid-feedback">
              <%= tokenError.msg %>
            </div>
          <% } %>
        </div>
        <div class="col-sm-2">
          <button type="submit" class="btn btn-primary" aria-label="Login">
            <i class="bi bi-box-arrow-in-right"></i>
          </button>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-6">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="remember" name="remember" aria-label="Remember token">
            <label class="form-check-label" for="remember">
              Remember token
            </label>
          </div>
        </div>
      </div>
    </form>
  </div>
</main>

<footer class="footer">
  <%- include('../partials/footer'); %>
</footer>

<%- include('../partials/bootstrap'); %>

</body>
</html>
