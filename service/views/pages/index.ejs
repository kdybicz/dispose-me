<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="bg-light">

<header>
  <%- include('../partials/header'); %>
</header>

<main role="main" class="container">
  <div class="jumbotron">
    <h1 class="display-4">ðŸ“¨ Dispose Me</h1>
    <p class="lead">I'm a simple, disposable email service with an easy API access.</p>
    <hr class="my-4">

    <form method="GET" action="/inbox">
      <div class="form-group row align-items-center">
        <label for="query" class="col-sm-2 col-form-label">Your new inbox:</label>
        <div class="col-sm-4">
          <input class="form-control" type="text" id="query" name="query"  value="<%= query.query ?? generatedUsername %>" placeholder="Inbox name" aria-label="Inbox name" required pattern="[a-zA-Z0-9.+]{2,}">
        </div>
        <label for="query" class="col-sm-2 col-form-label">@<%= process.env.DOMAIN_NAME %></label>
        <input type="hidden" name="x-api-key" value="<%= query['x-api-key'] %>"></input>
        <button type="submit" class="btn btn-default col-sm-1" aria-label="Open">
          <span class="bi bi-arrow-right-square-fill" aria-hidden="true" style="font-size: 2rem; color: DodgerBlue;"></span>
        </button>
      </div>
    </form>
  </div>
</main>

<footer class="footer">
  <%- include('../partials/footer'); %>
</footer>

