{
  "name": "dispose-me",
  "version": "1.4.0",
  "description": "Dispose Me is a simple AWS-hosted disposable email service.",
  "author": "Kamil Dybicz",
  "license": "MIT",
  "main": "src/handler.js",
  "engines": {
    "node": ">=v14.17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kdybicz/dispose-me.git"
  },
  "scripts": {
    "prestart": "yarn",
    "start": "sls offline start --noPrependStageInUrl --noAuth",
    "predebug": "yarn",
    "debug": "env SLS_DEBUG=* sls offline --noPrependStageInUrl --noAuth",
    "lint": "eslint src -c .eslintrc.json --ext ts",
    "test": "jest --watch",
    "test:coverage": "jest --all --coverage",
    "test:ci": "yarn test:coverage --ci --maxWorkers=2  --reporters=default --reporters=jest-junit",
    "predeploy": "yarn && yarn lint && jest --all",
    "deploy": "sls deploy --stage"
  },
  "dependencies": {
    "@types/ejs": "^3.0.5",
    "address-rfc2822": "^2.0.5",
    "aws-sdk": "^2.904.0",
    "ejs": "^3.1.5",
    "email-addresses": "^5.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "mailparser": "^3.0.0",
    "serverless-http": "^3.0.1",
    "source-map-support": "^0.5.10"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/aws-lambda": "^8.10.17",
    "@types/express": "^4.17.9",
    "@types/jest": "^27.0.1",
    "@types/mailparser": "^3.0.0",
    "@types/node": "^14.17.21",
    "@types/serverless": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "copy-webpack-plugin": "^10.2.4",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^27.0.1",
    "jest-junit": "^13.0.0",
    "serverless": "^3.11.0",
    "serverless-domain-manager": "^6.0.2",
    "serverless-offline": "8.5.0",
    "serverless-webpack": "^5.5.0",
    "ts-jest": "^27.0.0",
    "ts-loader": "^9.1.2",
    "ts-node": "^10.0.0",
    "typescript": "~4.6.3",
    "webpack": "5.71.0",
    "webpack-node-externals": "^3.0.0"
  }
}
