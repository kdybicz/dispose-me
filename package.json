{
  "name": "dispose-me",
  "version": "1.0.0",
  "description": "Dispose Me is a simple AWS-based self-hosted disposable email service.",
  "author": "Kamil Dybicz",
  "license": "MIT",
  "main": "src/handler.js",
  "engines": {
    "node": ">=12.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kdybicz/dispose-me.git"
  },
  "scripts": {
    "prestart": "yarn",
    "start": "sls offline start --dontPrintOutput --noPrependStageInUrl --noAuth",
    "predebug": "yarn",
    "debug": "env SLS_DEBUG=* sls offline --noPrependStageInUrl --noAuth",
    "lint": "eslint src -c .eslintrc.json --ext ts",
    "test": "jest --watch",
    "test:coverage": "jest --all --coverage",
    "predeploy": "yarn && yarn lint && jest --all",
    "deploy": "sls deploy --stage"
  },
  "dependencies": {
    "@types/ejs": "^3.0.5",
    "address-rfc2822": "^2.0.5",
    "aws-sdk": "^2.792.0",
    "ejs": "^3.1.5",
    "email-addresses": "^3.1.0",
    "express": "^4.17.1",
    "mailparser": "^3.0.0",
    "serverless-http": "^2.6.0",
    "source-map-support": "^0.5.10"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.17",
    "@types/express": "^4.17.9",
    "@types/mailparser": "^3.0.0",
    "@types/node": "^12.19.3",
    "@types/serverless": "^1.78.9",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "copy-webpack-plugin": "^6.3.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "serverless": "^2.11.1",
    "serverless-domain-manager": "^5.1.0",
    "serverless-dotenv-plugin": "^3.1.0",
    "serverless-offline": "6.6.0",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-node-externals": "^2.5.2"
  }
}
