<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="bg-light">

<header>
  <%- include('../partials/header'); %>
</header>

<main role="main" class="container">
  <div class="row">
    <div class="col-md">
      <h5><b>public inbox:</b> <%= query.query %></h5>
    </div>
    <div class="col-md text-right">
      <% if (query.query) { %>
        <a href="<%= url %>&type=json">[JSON]</a>
      <% } %>
    </div>
  </div>

  <% if (!query.query) { %>
    <form class="form-inline mt-2 mt-md-0" method="GET" action="/inbox">
      <input class="form-control mr-sm-2" type="text" name="query" value="<%= query.query %>" placeholder="Inbox name" aria-label="Inbox name">
    </form>
  <% } %>

  <%- include('../partials/email/list', { emails }); %>
</main>

<footer class="footer">
  <%- include('../partials/footer'); %>
</footer>

